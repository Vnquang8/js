<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#815C5454"
            android:paddingHorizontal="20sp"
            android:paddingVertical="20sp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="40sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnMPlus"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="M+"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="M+"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btnMTru"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="M-"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="M-"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btnMc"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="Mc"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="Mc"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btnAC"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="AC"
            android:onClick="Listener"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="7"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="8"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="9"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btnChia"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="/"
            android:onClick="Listener"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="4"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="5"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="6"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btnNhan"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="X"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="*"
            android:onClick="Listener"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="1"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="2"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="3"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btnTru"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="-"
            android:onClick="Listener"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="0"
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btnCham"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="."
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="."
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btnBang"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="="
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="="
            android:onClick="Listener"/>

        <Button
            android:id="@+id/btnCong"
            android:layout_width="wrap_content"
            android:layout_height="110sp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold"
            android:tag="+"
            android:onClick="Listener"/>
    </TableRow>
</TableLayout>